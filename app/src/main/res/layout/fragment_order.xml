<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".presentation.screens.order.OrderFragment">

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/segmentGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:singleSelection="true"
        android:layout_margin="8dp"
        app:selectionRequired="true"
        app:checkedButton="@id/btn_recent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_recent"
            style="@style/SegmentButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Recently" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_past"
            style="@style/SegmentButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="past orders" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recView"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/order_history_item"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />


</LinearLayout>